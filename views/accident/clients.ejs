<%- include ../inc/header.ejs %>

<%- include ../inc/menu.ejs %>


<%- messages('../inc/messages.ejs', locals) %>
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4" style="margin-bottom: 40px;">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/home">Главная страница</a></li>
              <li class="breadcrumb-item"><a href="/policies">Полисы </a></li>
              <li class="breadcrumb-item"><a href="/insurance/accident">Несчастный случай</a></li>
              <li class="breadcrumb-item active" aria-current="page"><%= title %></li>
            </ol>
          </nav>  
          <div class="staff-header">
            <h2><%= title %></h2> 
            <a href="/insurance/accident/add" class="btn btn-add">Добавить клиента</a>
          </div>
          <form action="/insurance/accident/clients/find" method="get">
            <input class="form-control form-control-dark" type="text" name="keyword" placeholder="Введите ФИО, ИИН, телефон ..." aria-label="Search">
          </form>
          <div class="container">
              <div class="row my-2">
                  <div class="col-lg-12 order-lg-2">
                      <ul class="nav nav-tabs">
                          <li class="nav-item">
                              <a href="" data-target="#t_new" data-toggle="tab" class="nav-link active">Новые заявки</a>
                          </li>
                          <li class="nav-item">
                              <a href="" data-target="#t_in_process" data-toggle="tab" class="nav-link">В процессе</a>
                          </li>
                          <li class="nav-item">
                              <a href="" data-target="#t_finished" data-toggle="tab" class="nav-link">Завершенные заявки</a>
                          </li>
                      </ul>
                      <div class="tab-content py-4">
                          <div class="tab-pane active" id="t_new">
                            <div class="table-responsive">
                              <table class="table table-striped table-lg staff">
                                <thead>
                                  <tr>
                                    <th>#</th>
                                    <th>ФИО</th>
                                    <th>Телефон</th>
                                    <th>Город</th>
                                    <th>Адрес</th>
                                    <th>Стоимость страхования</th>
                                    <th>Статус</th>
                                    <th>Действия</th>
                                  </tr>
                                </thead>
                                <tbody>
                                  <% if(a_new.length){

                                    for(var i = 0;i < a_new.length;i++) { %>

                                    <tr>
                                        <td><%=i+1%></td>
                                        <td><%=a_new[i].client_fullname%></td>
                                        <td><%=a_new[i].client_phone%></td>
                                        <td><%=a_new[i].client_city%></td>
                                        <td><%=a_new[i].client_address%></td>
                                        <td><%=a_new[i].insurance_price%></td>
                                        <th><%if(a_new[i].status == 0){%> Новая заявка <%} else if (a_new[i].status == 1){%> В процессе <%} else if(a_new[i].status == 2){%> Завершен <%} %></th>
                                        <td>
                                            <a href="/insurance/accident/client/show/<%=a_new[i].id%>"><i data-feather="eye"></i></a>
                                            <a href="/insurance/accident/client/edit/<%=a_new[i].id%>"><i data-feather="arrow-right-circle"></i></a>
                                            <a href="/insurance/accident/client/delete/<%=a_new[i].id%>"><i data-feather="trash-2"></i></a>
                                        </td>
                                    </tr>
                                    <% }

                                    }else{ %>
                                    <tr>
                                        <td colspan="3">No data</td>
                                    </tr>
                                  <% } %>
                                </tbody>
                              </table>
                            </div>
                              <!--/row-->
                          </div>
                          <div class="tab-pane" id="t_in_process">
                            <div class="table-responsive">
                              <table class="table table-striped table-lg staff">
                                <thead>
                                  <tr>
                                    <th>#</th>
                                    <th>ФИО</th>
                                    <th>Телефон</th>
                                    <th>Город</th>
                                    <th>Адрес</th>
                                    <th>Стоимость страхования</th>
                                    <th>Статус</th>
                                    <th>Действия</th>
                                  </tr>
                                </thead>
                                <tbody>
                                  <% if(a_in_process.length){

                                    for(var i = 0;i < a_in_process.length;i++) { %>

                                    <tr>
                                        <td><%=i+1%></td>
                                        <td><%=a_in_process[i].client_fullname%></td>
                                        <td><%=a_in_process[i].client_phone%></td>
                                        <td><%=a_in_process[i].client_city%></td>
                                        <td><%=a_in_process[i].client_address%></td>
                                        <td><%=a_in_process[i].insurance_price%></td>
                                        <th><%if(a_in_process[i].status == 0){%> Новая заявка <%} else if (a_in_process[i].status == 1){%> В процессе <%} else if(a_in_process[i].status == 2){%> Завершен <%} %></th>
                                        <td>
                                            <a href="/insurance/accident/client/show/<%=a_in_process[i].id%>"><i data-feather="eye"></i></a>
                                            <a href="/insurance/accident/client/edit/<%=a_in_process[i].id%>"><i data-feather="arrow-right-circle"></i></a>
                                            <a href="/insurance/accident/client/delete/<%=a_in_process[i].id%>"><i data-feather="trash-2"></i></a>
                                        </td>
                                    </tr>
                                    <% }

                                    }else{ %>
                                    <tr>
                                        <td colspan="3">Не найдено заявок в процессе</td>
                                    </tr>
                                  <% } %>
                                </tbody>
                              </table>
                            </div>
                          </div>
                          <div class="tab-pane" id="t_finished">
                              <div class="table-responsive">
                              <table class="table table-striped table-lg staff">
                                <thead>
                                  <tr>
                                    <th>#</th>
                                    <th>ФИО</th>
                                    <th>Телефон</th>
                                    <th>Город</th>
                                    <th>Адрес</th>
                                    <th>Стоимость страхования</th>
                                    <th>Статус</th>
                                    <th>Действия</th>
                                  </tr>
                                </thead>
                                <tbody>
                                  <% if(a_finished.length){

                                    for(var i = 0;i < a_finished.length;i++) { %>

                                    <tr>
                                        <td><%=i+1%></td>
                                        <td><%=a_finished[i].client_fullname%></td>
                                        <td><%=a_finished[i].client_phone%></td>
                                        <td><%=a_finished[i].client_city%></td>
                                        <td><%=a_finished[i].client_address%></td>
                                        <td><%=a_finished[i].insurance_price%></td>
                                        <th><%if(a_finished[i].status == 0){%> Новая заявка <%} else if (a_finished[i].status == 1){%> В процессе <%} else if(a_finished[i].status == 2){%> Завершен <%} %></th>
                                        <td>
                                            <a href="/insurance/accident/client/show/<%=a_finished[i].id%>"><i data-feather="eye"></i></a>
                                            <a href="/insurance/accident/client/edit/<%=a_finished[i].id%>"><i data-feather="edit-2"></i></a>
                                            <a href="/insurance/accident/client/delete/<%=a_finished[i].id%>"><i data-feather="trash-2"></i></a>
                                        </td>
                                    </tr>
                                    <% }

                                    }else{ %>
                                    <tr>
                                        <td colspan="3">Не найдено завершенных заявок</td>
                                    </tr>
                                  <% } %>
                                </tbody>
                              </table>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </main>
  
<%- include ../inc/footer.ejs %>
