<%- include ../inc/header.ejs %>

<%- include ../inc/menu.ejs %>

<%- messages('../inc/messages.ejs', locals) %>

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4" style="margin-bottom: 40px;">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/home">Главная страница</a></li>
      <li class="breadcrumb-item"><a href="/staff">Все менеджеры</a></li>
      <li class="breadcrumb-item active" aria-current="page">Просмотр - <%= data[0].m_fullname %></li>
    </ol>
  </nav> 
<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >


    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title"><%= title %> &ndash; <%= data[0].m_fullname %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-3 col-lg-3 " align="center"> <img alt="<%= data[0].m_fullname %>" width="120px" src="/images/profile.svg" class="img-circle img-responsive"> </div>
          <div class=" col-md-9 col-lg-9 ">
            <table class="table table-user-information">
              <tbody>
                <tr>
                  <td>Полное имя:</td>
                  <td><%= data[0].m_fullname %></td>
                </tr>
                <tr>
                  <td>Роль:</td>
                  <td><%= data[0].r_rolename %></td>
                </tr>
                <tr>
                  <td>Должность:</td>
                  <td><%= data[0].m_title %></td>
                </tr>
                <tr>
                  <td>Дата рождения:</td>
                  <td><%= data[0].m_birthdate %></td>
                </tr>
                <tr>
                  <td>Телефон:</td>
                  <td><%= data[0].m_phone %></td>
                </tr>
                <tr>
                  <td>Пол:</td>
                  <td><%= data[0].m_gender %></td>
                </tr>
                  <tr>
                  <td>Количество обслуженных клиентов:</td>
                  <td>Count</td>
                </tr>
                <tr>
                  <td>Дата приема на работу</td>
                  <td><%= data[0].m_hiredate %></td>
                </tr>
                  <td>Корпоративная почта</td>
                  <td><%= data[0].m_email %></td>
                </tr>
                <tr>
                  <td>Данные для входа:</td>
                  <td>Логин: <strong><%= data[0].m_login %></strong> <br> Пароль: <strong><%= data[0].m_password %></strong></td>
                </tr>

              </tbody>
            </table>
            <a href="/staff" class="btn btn-back">Обратно к списку </a>
            <a href="/staff/edit/<%=data[0].id%>" class="btn btn-edit">Редактировать</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include ../inc/footer.ejs %>
