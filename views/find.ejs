<%- include inc/header.ejs %>

<%- include inc/menu.ejs %>


        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
          <h2><%= title %></h2>
          <form action="/find" method="get">
            <input class="form-control form-control-dark"  name="keyword" type="text" placeholder="Введите фио, иин, телефон ...">  
          </form>
          <div class="table-responsive">
            <table class="table table-striped table-lg staff">
              <thead>
                <tr align="center">
                  <th>#</th>
                  <th>ФИО</th>
                  <th>Адрес</th>
                  <th>Телефон</th>
                  <th>Почта</th>
                  <th>Город</th>
                  <th>Тип страхования</th>
                </tr>
              </thead>
                    
              <tbody >
                <%
                  
                  if(data.length){

                  for(var i = 0;i < data.length;i++) { %>

                  <tr align="center">
                      <td><%=data[i].id%></td>
                      <td><%=data[i].client_fullname%></td>
                      <td><%=data[i].client_address%></td>
                      <td><%=data[i].client_phone%></td>
                      <td><%=data[i].client_email%></td>
                      <td><%=data[i].client_city%></td>
                      <td><%if(data[i].insurance_type == 1){%> КАСКО <%} else if (data[i].insurance_type == 2){%> Туризм <%} else if (data[i].insurance_type == 4){%> Недвижимость <%} else if (data[i].insurance_type == 5){%> Несчастный случай <%}  %></td>
                  </tr>
                  <% }

                  }else{ %>
                  <tr>
                      <td>- || - </td>
                      <td>- || - </td>
                      <td>- || - </td>
                      <td>- || - </td>
                      <td>- || - </td>
                      <td>- || - </td>
                      <td>- || - </td>
                  </tr>
                <% } %>
              </tbody>

            </table>
          </div>
        </main>


<%- include inc/footer.ejs %>
      
