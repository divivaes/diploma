<%- include ../inc/header.ejs %>
<%- include ../inc/menu.ejs %>


<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/home">Главная страница</a></li>
    <li class="breadcrumb-item"><a href="/insurance/news">Новости </a></li>
    <li class="breadcrumb-item active" aria-current="page"><%= title %></li>
  </ol>
</nav>  
<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title"><%= title %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class=" col-md-12 col-lg-12">
            <form action="/insurance/news/save/<%=data[0].id%>" method="post" class="type-form form-horizontal">
              <div class="form-group">
                <label for="n_title">Заголовок</label>
                <input type="text" class="form-control" name="n_title" value="<%= data[0].n_title %>">
              </div>
              <div class="form-group">
                <label for="n_body">Cообщение</label>
                <textarea name="n_body" class="form-control" cols="30" rows="10"><%= data[0].n_body %></textarea>
              </div>
              <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-lg btn-add">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include ../inc/footer.ejs %>
