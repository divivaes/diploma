<%- include inc/header.ejs %>

<%- include inc/menu.ejs %>


        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/home">Главная страница</a></li>
              <li class="breadcrumb-item"><a href="/web">Работа с клиентами </a></li>
              <li class="breadcrumb-item active" aria-current="page"><%= title %></li>
            </ol>
          </nav>
          <h2><%= title %></h2>
          <input class="form-control form-control-dark" type="text" placeholder="Поиск по заявкам с контактных форм" aria-label="Search">
          <div class="table-responsive contact-form">
            <table class="table table-striped table-lg staff">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Имя</th>
                  <th>Почта</th>
                  <th>Телефон</th>
                  <th>Сообщение</th>
                  <th>Статус</th>
                  <th>Менеджер</th>
                  <th>Действия</th>
                </tr>
              </thead>
              <tbody>
                <% if(data.length){

                  for(var i = 0;i < data.length;i++) { %>

                  <tr>
                      <td><%=(i+1)%></td>
                      <td><%=data[i].f_name%></td>
                      <td><%=data[i].f_email%></td>
                      <td><%=data[i].f_phone%></td>
                      <td><%=data[i].f_message%></td>
                      <td><%if(data[i].f_status == 0){%>Новый<%} else {%>Завершен<%} %></td>
                      <td><%=data[i].f_served_mid%></td>
                      <td>
                          <a href="/insurance/forms/1/show/<%=data[i].id%>"><i data-feather="eye"></i></a>
                          <a href="/insurance/forms/1/edit/<%=data[i].id%>"><i data-feather="edit-2"></i></a>
                          <a href="/insurance/forms/1/delete/<%=data[i].id%>"><i data-feather="trash-2"></i></a>
                      </td>
                  </tr>
                  <% }

                  }else{ %>
                  <tr>
                      <td colspan="3">No user</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </main>
      </div>
    </div>

<%- include inc/footer.ejs %>
