<!doctype html>
<html>
<head>
    <title>СМ Системс | Логин</title>
	<link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/login.css">
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
</head>
<body>
    <div class="container">
        <div class="col-sm-12">
            <img class="logo" src="/images/logo.png">
            <div class="login-container">
                <div class="login-header">
                    <span><strong>СМ</strong> Системс</span>
                    <p><%= title %></p>
                </div>
								<!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>

                <div class="login-body">
                    <form action="/login" method="post">
                        <div class="form-group">
                            <label><i class="fa fa-user"></i> Логин</label>
                            <input type="text" name="m_login">
                        </div>
                        <div class="form-group">
                            <label><i class="fa fa-lock"></i> Пароль</label>
                            <input type="password" name="m_password">
                        </div>

                        <div class="btn-holder clearfix">
                            <button type="submit" class="pull-right btn-login">ВОЙТИ</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</body>
</html>
