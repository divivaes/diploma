<%- include ../inc/header.ejs %>
<%- include ../inc/menu.ejs %>


<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/home">Главная страница</a></li>
    <li class="breadcrumb-item"><a href="/announcements">Анонсы </a></li>
    <li class="breadcrumb-item active" aria-current="page"><%= title %></li>
  </ol>
</nav>  
<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title"><%= title %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class=" col-md-12 col-lg-12">
            <form action="/announcement/save/<%=data[0].id%>" method="post" class="type-form form-horizontal">
              <div class="form-group">
                <label for="title">Заголовок</label>
                <input type="text" class="form-control" name="title" value="<%= data[0].title %>">
              </div>
              <div class="form-group">
                <label for="body">Cообщение</label>
                <textarea name="body" class="form-control" cols="30" rows="10"><%= data[0].body %></textarea>
              </div>
              <div class="form-group">
                <label for="tag">Тип анонса</label>
                <select name="tag" id="" class="form-control">
                  <option value="">Выберите из списка</option>
                  <option value="Новость" <%if(data[0].tag == 'Новость'){%>selected="selected"<%} %>">Новость</option>
                  <option value="Срочно" <%if(data[0].tag == 'Срочно'){%>selected="selected"<%} %> >Срочно</option>
                  <option value="Рассмотреть" <%if(data[0].tag == 'Рассмотреть'){%>selected="selected"<%} %> >Рассмотреть</option>
                  <option value="Праздник" <%if(data[0].tag == 'Праздник'){%>selected="selected"<%} %>>Праздник</option>
                  <option value="Объявление" <%if(data[0].tag == 'Объявление'){%>selected="selected"<%} %>>Объявление</option>
                </select>
              </div>
              <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-lg btn-add">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include ../inc/footer.ejs %>
