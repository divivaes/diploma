<%- include ../inc/header.ejs %>

<%- include ../inc/menu.ejs %>


<%- messages('../inc/messages.ejs', locals) %>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4" style="margin-bottom: 40px;">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/home">Главная страница</a></li>
              <li class="breadcrumb-item"><a href="/policies">Полисы </a></li>
              <li class="breadcrumb-item"><a href="/insurance/kasko">КАСКО</a></li>
              <li class="breadcrumb-item active" aria-current="page"><%= title %></li>
            </ol>
          </nav>  
          <div class="staff-header">
            <h2><%= title %></h2> 
            <a href="/insurance/kasko/add" class="btn btn-add">Добавить клиента</a>
          </div>
          <form action="/insurance/kasko/clients/find" method="get">
            <input class="form-control form-control-dark" type="text" name="keyword" placeholder="Введите ФИО, ИИН, телефон ..." aria-label="Search">
          </form>
          <div class="container">
              <div class="row my-2">
                  <div class="col-lg-12 order-lg-2">
                      <ul class="nav nav-tabs">
                          <li class="nav-item">
                              <a href="" data-target="#t_new" data-toggle="tab" class="nav-link active">Новые заявки</a>
                          </li>
                          <li class="nav-item">
                              <a href="" data-target="#t_in_process" data-toggle="tab" class="nav-link">В процессе</a>
                          </li>
                          <li class="nav-item">
                              <a href="" data-target="#t_finished" data-toggle="tab" class="nav-link">Завершенные заявки</a>
                          </li>
                      </ul>
                      <div class="tab-content py-4">
                          <div class="tab-pane active" id="t_new">
                            <div class="table-responsive">
                              <table class="table table-striped table-lg staff">
                                <thead>
                                  <tr>
                                    <th>#</th>
                                    <th>ФИО</th>
                                    <th>Телефон</th>
                                    <th>Город</th>
                                    <th>Адрес</th>
                                    <th>ИИН</th>
                                    <th>Тип ТС</th>
                                    <th>Стоимость страхования</th>
                                    <th>Статус</th>
                                    <th>Действия</th>
                                  </tr>
                                </thead>
                                <tbody>
                                  <% if(k_new.length){

                                    for(var i = 0;i < k_new.length;i++) { %>

                                    <tr>
                                        <td><%=i+1%></td>
                                        <td><%=k_new[i].client_fullname%></td>
                                        <td><%=k_new[i].client_phone%></td>
                                        <td><%=k_new[i].client_city%></td>
                                        <td><%=k_new[i].client_address%></td>
                                        <td><%=k_new[i].driver_iin%></td>
                                        <td>
                                          <%if(k_new[i].car_type == 0){%> Легковой автомобиль <%} else if (k_new[i].car_type == 1){%> Автобусы до 16 мест <%} else if (k_new[i].car_type == 2){%> Автобусы более 16 мест <%} else if (k_new[i].car_type == 3){%> Грузовые <%} else if(k_new[i].car_type == 4) {%> Троллейбусы, трамваи <%} else if (k_new[i].car_type == 5) {%> Мототранспорт <%} else if (k_new[i].car_type == 6) {%> Прицепы (полуприцепы) <%} %>
                                        </td>
                                        <td><%=k_new[i].ins_price%></td>
                                        <th><%if(k_new[i].status == 0){%> Новая заявка <%} else if (k_new[i].status == 1){%> В процессе <%} else if(k_new[i].status == 2){%> Завершен <%} %></th>
                                        <td>
                                            <a href="/insurance/kasko/client/show/<%=k_new[i].id%>"><i data-feather="eye"></i></a>
                                            <a href="/insurance/kasko/client/edit/<%=k_new[i].id%>"><i data-feather="arrow-right-circle"></i></a>
                                            <a href="/insurance/kasko/client/delete/<%=k_new[i].id%>"><i data-feather="trash-2"></i></a>
                                        </td>
                                    </tr>
                                    <% }

                                    }else{ %>
                                    <tr>
                                        <td colspan="3">No data</td>
                                    </tr>
                                  <% } %>
                                </tbody>
                              </table>
                            </div>
                          </div>
